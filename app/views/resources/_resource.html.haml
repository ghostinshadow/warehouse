- resource = resource.decorate
%tr  
  %td= resource.name_body
  %td= resource.category_body
  %td= resource.type
  %td= resource.unit_body
  %td= resource.price_uah
  %td= resource.price_usd
  %td= resource.price_eur
  %td= resource.count
  %td
    = link_to t('resources.edit'), edit_resource_path(resource), class: 'btn btn-warning'
    = link_to t('actions.delete'), resource_path(resource), class: 'btn btn-danger', method: :delete, data: {confirm: t('r_u_sure')}